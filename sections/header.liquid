<link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">

<header class="header">
  <div class="header__container">

    <!-- ✅ LOGO REMAINS AT TOP-LEFT -->
    <div class="header__logo">
      <a href="{{ routes.root_url }}" class="header__logo-link">
        <img src="https://cdn.shopify.com/s/files/1/0741/7380/8897/files/C7453B62-46E3-460E-BB48-52D625ACBF5B.png?v=1738930647"
             alt="Divine Toys Logo" 
             class="header__logo-img">
      </a>
    </div>

    <!-- ✅ Navigation positioned at bottom-right of LOGO -->
    <div class="header__nav-container">
      <nav class="header__nav">
        <ul class="header__menu">
          {%- for link in section.settings.menu.links -%}
            <li class="header__menu-item">
              <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    </div>

    <!-- ✅ Header Icons stay on FAR RIGHT -->
    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon">
        <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
      </a>
      {%- if shop.customer_accounts_enabled -%}
        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__icon">
          <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
        </a>
      {%- endif -%}
      <a href="{{ routes.cart_url }}" class="header__icon">
        <span class="svg-wrapper">
          {%- if cart == empty -%}
            {{ 'icon-cart-empty.svg' | inline_asset_content }}
          {%- else -%}
            {{ 'icon-cart.svg' | inline_asset_content }}
          {%- endif -%}
        </span>
        {%- if cart.item_count > 0 -%}
          <span class="cart-count-bubble">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    </div>

  </div> <!-- End .header__container -->

</header>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Main Menu"
    }
  ]
}
{% endschema %}
