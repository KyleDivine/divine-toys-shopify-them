<link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">

<header class="header">
  <div class="header__inner page-width">
    
    <!-- ✅ Fixed Logo Placement (Top Left) -->
    <div class="header__logo">
      <a href="{{ routes.root_url }}">
        <img src="https://cdn.shopify.com/s/files/1/0741/7380/8897/files/C7453B62-46E3-460E-BB48-52D625ACBF5B.png?v=1738930647" 
             alt="Divine Toys Logo" 
             class="header__logo-img">
      </a>
    </div>

    <!-- ✅ Fixed Navigation (Aligned to Right of Logo) -->
    <nav class="header__nav">
      <ul class="header__menu">
        {%- for link in section.settings.menu.links -%}
          <li class="header__menu-item">
            <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>

    <!-- ✅ Moved Header Icons to the Top Right -->
    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon">
        <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
          <path d="M23.71 22.29l-6.4-6.39a9 9 0 1 0-1.41 1.41l6.39 6.4a1 1 0 0 0 1.42-1.42zM10 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z"></path>
        </svg>
      </a>

      {%- if shop.customer_accounts_enabled -%}
        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__icon">
          <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
            <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5zm0-8a3 3 0 1 1-3 3 3 3 0 0 1 3-3zm0 10c-6.627 0-12 3.373-12 7.5a1 1 0 0 0 2 0c0-3.038 4.962-5.5 10-5.5s10 2.462 10 5.5a1 1 0 0 0 2 0c0-4.127-5.373-7.5-12-7.5z"></path>
          </svg>
        </a>
      {%- endif -%}

      <a href="{{ routes.cart_url }}" class="header__icon">
        <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
          <path d="M7 4V2a1 1 0 0 1 2 0v2h6V2a1 1 0 0 1 2 0v2h4a1 1 0 0 1 1 1v17a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1zm1 2H4v15h16V6h-4v2a1 1 0 0 1-2 0V6H9v2a1 1 0 0 1-2 0zm2 5a1 1 0 0 0-2 0v6a1 1 0 0 0 2 0zm5 0a1 1 0 0 0-2 0v6a1 1 0 0 0 2 0zm5 0a1 1 0 0 0-2 0v6a1 1 0 0 0 2 0z"></path>
        </svg>
        {%- if cart.item_count > 0 -%}
          <span class="cart-count-bubble">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    </div>

  </div>
</header>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Main Menu"
    }
  ]
}
{% endschema %}
