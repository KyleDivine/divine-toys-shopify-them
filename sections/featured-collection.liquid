<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'featured-collection.css' | asset_url }}" media="print" onload="this.media='all'">

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 40px;
    padding-bottom: 40px;
    background: url('{{ 'galactic-bg.svg' | asset_url }}') no-repeat center center/cover;
  }

  .featured-collection {
    text-align: center;
  }

  .featured-collection__title {
    font-size: 2rem;
    color: #ffffff;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 20px;
    justify-content: center;
  }

  .product-card {
    background: rgba(0, 0, 0, 0.7);
    border-radius: 8px;
    padding: 10px;
    position: relative;
    transition: transform 0.3s ease-in-out;
  }

  .product-card:hover {
    transform: scale(1.05);
  }

  .product-card--heroes {
    border: 2px solid #2333C;
  }

  .product-card--aliens {
    border: 2px solid #7658C;
  }

  .limited-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #FFD700;
    color: #000;
    padding: 5px 10px;
    font-size: 0.8rem;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 5px;
  }

  .product-title {
    font-size: 1.2rem;
    color: #fff;
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="featured-collection">
    <h2 class="featured-collection__title">{{ section.settings.title | escape }}</h2>
    <div class="product-grid">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        {%- assign product_category = product.tags | downcase -%}
        <div class="product-card {% if product_category contains 'hero' %}product-card--heroes{% elsif product_category contains 'alien' %}product-card--aliens{% endif %}">
          {% if product.tags contains "Limited Edition" %}
            <span class="limited-badge">Limited Edition</span>
          {% endif %}
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="product-image">
          </a>
          <h3 class="product-title">{{ product.title }}</h3>
          <p class="product-price">{{ product.price | money }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Featured Collection",
      "label": "Section Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "Number of Products to Show"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
