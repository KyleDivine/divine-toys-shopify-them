<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ shop.name }}</title>

  <!-- Favicon -->
  <link rel="icon" href="{{ 'favicon.ico' | asset_url }}" type="image/x-icon">

  <!-- Theme Styles -->
  <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">

  <!-- Shopify Required Meta Tags -->
  {{ content_for_header }}

  <style>
    /* Global Font */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #0b0f19; /* Dark sci-fi background */
      color: #ffffff; /* White text */
      margin: 0;
      padding: 0;
    }

    /* Headings */
    h1, h2, h3 {
      font-weight: bold;
      text-transform: uppercase;
    }

    /* Reduce Icon Size */
    .header__icon {
      width: 24px;
      height: 24px;
    }
  </style>
</head>
<body>
  <header class="header">
    {% section 'header' %}
  </header>

  <main role="main">
    {{ content_for_layout }}
  </main>

  <footer class="footer">
    {% section 'footer' %}
  </footer>

  <!-- Theme JavaScript -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>

