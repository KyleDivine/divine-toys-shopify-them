<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ shop.name }}</title>

    {{ content_for_header }}

    {{ 'base.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'base.js' | asset_url }}" defer></script>

    <style>
      /* Fix Black Screen */
      body {
        background: #0a0a0a;
        color: #ffffff;
      }

      /* Fix Navigation Colors */
      .header__menu-link {
        color: #ffffff;
      }
    </style>
  </head>
  <body>
    {% section 'header' %}
    <main role="main">
      {{ content_for_layout }}
    </main>
    {% section 'footer' %}
  </body>
</html>
