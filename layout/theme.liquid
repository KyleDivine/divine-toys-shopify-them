<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ shop.name }}</title>

  <!-- Favicon -->
  <link rel="icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">

  <!-- Shopify Theme Styles -->
  {{ content_for_header }}

  <!-- ✅ Fixed: Properly linking CSS files -->
  <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">

  <!-- ✅ Fixed: JavaScript File References -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
  <script src="{{ 'header.js' | asset_url }}" defer></script>
  <script src="{{ 'cart.js' | asset_url }}" defer></script>
</head>

<body>
  <!-- ✅ Fixed: Ensuring Layout Loads -->
  <div class="page-container">
    
    <!-- ✅ Header Section -->
    {% section 'header' %}

    <!-- ✅ Main Content -->
    <main class="main-content" role="main">
      {{ content_for_layout }}
    </main>

    <!-- ✅ Footer Section -->
    {% section 'footer' %}
    
  </div>
</body>
</html>
